{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",  // Use this for React 17 and later
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"], // Add jest to include Jest types
    "baseUrl": "./", // Make sure the baseUrl is set to the root directory
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"], // Map @components to src/components
      "@assets/*": ["src/assets/*"],         // Map @assets to src/assets
      "@utils/*": ["src/utils/*"]            // Map @utils to src/utils
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"]
}
